<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h3><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h3>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :parent_id %>
    <%= form.collection_select :parent_id, @categories, :id, :title, { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :slug %>
    <%= form.text_field :slug, class: 'form-control' %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
