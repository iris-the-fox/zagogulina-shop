

<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= product.description %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
