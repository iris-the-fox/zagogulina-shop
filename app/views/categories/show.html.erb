

<p>
  <strong>Title:</strong>
  <%= @category.title %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Parent Categorory</th>

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= product.description %></td>
        <th><%= link_to product.category.title, product.category if product.category%></th>


      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>
<% end %>


